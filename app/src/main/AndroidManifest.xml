<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linearbd.sohel.rushinalarm">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MaterialAnimations.Black">
        <activity android:name="com.linearbd.sohel.rushinalarm.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.linearbd.sohel.rushinalarm.Activities.AlarmActivity"
            android:theme="@style/MaterialAnimations.Black" />
        <activity
            android:name="com.linearbd.sohel.rushinalarm.Activities.AddAlarmActivity"
            android:theme="@style/MaterialAnimations.Black" />
        <activity android:name="com.linearbd.sohel.rushinalarm.Activities.SnoozeDurationActivity" />
        <activity
            android:name="com.linearbd.sohel.rushinalarm.Activities.RepeatActivity"
            android:theme="@style/MaterialAnimations.Black" />
        <activity
            android:name="com.linearbd.sohel.rushinalarm.Activities.SoundActivity"
            android:theme="@style/MaterialAnimations.Black" />
        <activity android:name="com.linearbd.sohel.rushinalarm.Activities.AlarmRingingActivity" />

        <service
            android:name="com.linearbd.sohel.rushinalarm.JobSchduler.MyJobSchedulerService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service android:name="com.linearbd.sohel.rushinalarm.JobSchduler.SnoozeSchdulerService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>

        <receiver android:name="com.linearbd.sohel.rushinalarm.AlarmReceiver" />

        <activity android:name="com.linearbd.sohel.rushinalarm.Activities.TestActivity"></activity>
    </application>

</manifest>